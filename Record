int exitThis(){

       cout << "Do you wish to exit?" << endl;
       cout << "Type 1 for yes, 2 for no" << endl;
        char answer = getch();
        switch(answer){
    case '1':
        exit (EXIT_FAILURE);
        break;
    case '2':
        exitThis();
        }
        }




