        exitThis();
    case '3':
        goBack();
        }
        }
*/ if(answer == '1'){
    exit (EXIT_FAILURE);
}else if(answer == '2'){
    exitThis();
}else if(answer == '3'){
    goBack();
}else if(answer != '1' || answer != '2'||answer != '3'){
    cout << "What you typed was not an option provided. Please try again." << endl;
    exitThis();
}
return 0;
}

